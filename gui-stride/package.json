
{
  "name": "safeguard-ai-desktop",
  "version": "1.0.0",
  "main": "main.js",
  "description": "SafeGuard AI - Premium Desktop Dashboard",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --macos"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "lucide-react": "^0.562.0",
    "@google/genai": "^1.34.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.safeguard.ai",
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"],
      "darkModeSupport": true
    },
    "directories": {
      "output": "dist"
    }
  }
}
